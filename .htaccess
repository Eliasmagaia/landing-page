# Habilitar mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /landing-page/
  
  # Remover trailing slash (opcional)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)/$ /$1 [L,R=301]
  
  # Redirecionar para index.html se arquivo não existe
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [QSA,L]
</IfModule>

# Cache de longa duração para assets
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|woff|woff2|ttf|css|js)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # Cache de curta duração para HTML
  <FilesMatch "\.html$">
    Header set Cache-Control "max-age=3600, public, must-revalidate"
  </FilesMatch>
  
  # Desabilitar cache para Service Worker
  <FilesMatch "sw\.js$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
  Header set X-UA-Compatible "IE=edge"
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>
